{
  "name": "shields",
  "version": "1.0.0",
  "description": "An OAuth 2.0 authorization server implementation based on OAuth2orize",
  "main": "index.js",
  "scripts": {
    "start": "node bin/server.js",
    "dev": "npm-run-all --parallel start:dev build:watch",
    "start:dev": "cross-env NODE_ENV=development nodemon bin/server.js --ignore src/views --ignore public/js/bundle.js",
    "build": "npm run build:clean && npm run build:server && npm run build:client",
    "build:clean": "rimraf dist public/js/bundle.js",
    "build:server": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "build:client": "cross-env NODE_ENV=production browserify -g envify dist/views/index.js | uglifyjs -c warnings=false -m > public/js/bundle.js",
    "build:watch": "cross-env NODE_ENV=development watchify -vd -p browserify-hmr -t [ babelify --presets [ react-hmre ] ] -t envify -e src/views/index.js -o public/js/bundle.js",
    "test": "cross-env NODE_ENV=test jest --forceExit",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src"
  },
  "author": "Chun-Kai Wang <chunkai1312@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "api-error-handler": "^1.0.0",
    "body-parser": "^1.15.2",
    "compose-middleware": "^2.2.0",
    "compression": "^1.6.2",
    "connect-ensure-login": "^0.1.1",
    "connect-redis": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "credential": "^1.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-session": "^1.15.1",
    "express-validator": "^3.2.0",
    "express-winston": "^2.1.0",
    "helmet": "^3.1.0",
    "http-errors": "^1.5.1",
    "http-proxy-middleware": "^0.17.3",
    "ioredis": "^2.5.0",
    "jsonwebtoken": "^7.3.0",
    "lodash": "^4.17.2",
    "material-ui": "^0.17.4",
    "method-override": "^2.3.7",
    "minimist": "^1.2.0",
    "mongoose": "^4.7.2",
    "mongoose-delete": "^0.3.4",
    "mongoose-hidden": "^1.3.0",
    "mongoose-seed": "^0.3.1",
    "morgan": "^1.7.0",
    "nodemailer": "^4.0.1",
    "nodemailer-mailgun-transport": "^1.3.5",
    "oauth2orize": "^1.7.0",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "react": "15.4",
    "react-dom": "15.4",
    "react-engine": "^4.3.0",
    "react-router": "3",
    "react-tap-event-plugin": "^2.0.1",
    "uuid": "^3.0.1",
    "winston": "^2.3.0",
    "winston-daily-rotate-file": "^1.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "browserify-hmr": "^0.3.5",
    "cross-env": "^3.1.4",
    "envify": "^4.0.0",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "node-mocks-http": "^1.6.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.5.4",
    "supertest": "^2.0.1",
    "uglify-js": "^2.8.22",
    "watchify": "^3.9.0"
  }
}
